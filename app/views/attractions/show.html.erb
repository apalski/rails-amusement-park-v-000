
<h1>Attractions</h1>

<h2><%= @attraction.name %></h2>

<% if @user.admin %>
	<%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% end %>

<h3>Tickets Required: <%= @attraction.tickets %></h3>
<h3>Height Requirements: <%= @attraction.min_height %></h3>
<h3>Nausea Rating: <%= @attraction.nausea_rating %></h3>
<h3>Happiness Rating: <%= @attraction.happiness_rating %></h3>

<%= form_tag(rides_create_path, method: 'post') do %>
  <%= hidden_field_tag :attraction_id, @attraction.id %>
  <%= submit_tag 'Go on this ride' %>
<% end %>
